
@{
    ViewBag.Title = "Videos";
}

@using u21441104_HW03.Models
@model List<FileModel>

<h2>Video Files</h2>
<h5>......... "App_Data/videos/" folder</h5>

<div class="container" style="background-color:lightgray">
    <div class="row">
        @foreach (FileModel file in Model)
        {
            <div class="col-lg-4">
                <div class="card" style="width: 100%; border: solid 1px; margin-bottom: 30px; margin-top: 30px">

                    <img class="card-img-top" src="~/App_Data/videos/" />
                    <div class="card-body">

                        <p>@file.FileName</p>

                        <p class="card-text"></p>

                        <button style="border-radius: 2px; background-color:lightgreen; border:none; height: 30px">
                            @Html.ActionLink("Download", "DownloadFile",
                          new { fileName = file.FileName })
                        </button>


                        <button style="border-radius: 2px; background-color:lightcoral; border:none; height: 30px">
                            @Html.ActionLink("DELETE", "DeleteFile",
                        new { fileName = file.FileName },
                        new { onclick = "return confirm('Are you sure you wish to delete this?');" })
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

